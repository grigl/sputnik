<h1>Экскурсии</h1>

<table class="table">
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th>Полный текст</th>
    <th>Особенности экскурсии</th>
    <th>ID видео на вимео</th>
    <th></th>
    <th></th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%= link_to activity.title, activity %></td>
    <td><%= activity.lead_text[0..15] %></td>
    <td><%= activity.full_text[0..15] %></td>
    <td><%= activity.features[0..15] %></td>
    <td><%= activity.video %></td>
    <td><%= link_to 'Редактировать', edit_activity_path(activity) %></td>
    <td><%= link_to 'Удалить', activity, confirm: 'Точно удалить?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить экскурсию', new_activity_path, class: 'btn btn-primary' %>
