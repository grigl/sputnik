<h1>Cписок экскурсий</h1>

<table class="table">
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= link_to list.title, list %></td>
    <td><%= list.lead_text %></td>
    <td><%= link_to 'Редактировать', edit_list_path(list) %></td>
    <td><%= link_to 'Удалить', list, confirm: 'Точно удалить?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Новый список экскурсий', new_list_path, class: 'btn btn-primary' %>
